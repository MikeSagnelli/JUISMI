<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dip" >

    <TextView
        android:id="@+id/nameTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="Name of the task"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/issueStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/nameTask"
        android:text="Status: DONE"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/tag"
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="false"
        android:src="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/storyPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/issueStatus"
        android:layout_alignParentStart="true"
        android:text="Story Points"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</RelativeLayout>
