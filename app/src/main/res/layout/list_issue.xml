<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dip" >

    <TextView
        android:id="@+id/nameTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="Name of the task"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/comment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nameTask"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/comentario" />

    <TextView
        android:id="@+id/noComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/comment"
        android:layout_toEndOf="@+id/tag"
        android:text="# of comments"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/issueStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/noComments"
        android:layout_alignBottom="@+id/noComments"
        android:layout_alignParentEnd="true"
        android:text="Status: DONE"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/tag"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:src="@drawable/rectangle"/>
</RelativeLayout>
